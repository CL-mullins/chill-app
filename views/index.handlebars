  <body>
  <!-- Triple brackets -->
  <!-- Learn handlebars syntax--->
  <div class="container">
    <div class="row">
      <!--{{#if currentUser}}-->
      <h2>Browse stores</h2>
    </div>
    <div class="row">
      <div class="container">
        {{#each store}}
        <div class="col-md-3">
          <div class="card" style="width: 18rem;">
            <div class="card-body">
              <h4 class="card-title">{{this.name}}</h4>
              <a href="{{this.url}}" class="card-link">{{this.url}}</a>
              <p class="card-text">Users in line: {{this.queue}}</p>
              <a href="store/{{this._id}}/join_queue"><button type="submit" class="btn btn-primary">Join Queue</button></a>
              <a href="store/{{this._id}}" method="post"><button type="submit" class="btn btn-primary">Details</button></a>
            </div>
          </div>
        {{/each}}
      </div>
