  <!-- Triple brackets -->
  <!-- Learn handlebars syntax--->
     <nav class="navbar navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Chill App</a>
        <a class="nav-link text-center" href="/stores/new">Add store</a>
        <a href="/sign-up">Logout</a>
        {{#if user}}
          <a href="/sign-up">Logout</a>
        {{/if}}
      </div>
    </nav>
  <!-- Triple brackets -->
  <!-- Learn handlebars syntax--->
  <div class="container">
    <div class="row">
      <h2>Browse stores</h2>
    </div>
  </div>
  <div class="container">
    <div class="row">
        {{#each store}}
        <div class="col-md-3 col-sm-6">
          <div class="card" style="width: 18rem;">
            <div class="card-body">
              <h4 class="card-title">{{this.name}}</h4>
              <a href="{{this.url}}" class="card-link">{{this.url}}</a>
              <p class="card-text">Users in line: {{this.queue}}</p>
              <button type="submit" class="btn btn-primary">Join Queue</button>
              <a href="store/{{this._id}}"><button type="submit" class="btn btn-primary">Details</button></a>
            </div>
          </div>
        </div>
        {{/each}}
    </div>
  </div>
